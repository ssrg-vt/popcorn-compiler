+  // Emit nops.
+  for (unsigned i = 0; i < NumNOPBytes; i += 4)
+    EmitToStreamer(*OutStreamer,
+		  MCInstBuilder(RISCV::ADDI)
+		   .addReg(RISCV::X0)
+		   .addReg(RISCV::X0)
+		   .addImm(0));
