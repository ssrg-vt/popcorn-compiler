+void PrefetchAnalysis::analyzeStmt() {
+  if(!Ctx || !S) return;
+
+  Loops = std::make_shared<LoopNestTraversal>(Ctx);
+  ArrAccesses = std::make_shared<ArrayAccessPattern>(Ignore);
+
+  // TODO other types of statements
+  if(isa<ForStmt>(S)) analyzeForStmt();
+
+  pruneArrayAccesses();
+}
